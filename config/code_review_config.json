{
  "code_review_config": {
    "version": "1.0",
    "description": "Customizable code review configuration - modify values as needed",
    
    "general_checks": {
      "check_code_quality": true,
      "check_security": true,
      "check_performance": true,
      "check_best_practices": true,
      "check_documentation": true
    },
    
    "severity_levels": {
      "enabled": ["high", "medium", "low"],
      "fail_on": ["high"]
    },
    
    "code_quality": {
      "max_function_length": 50,
      "max_line_length": 120,
      "max_complexity": 10,
      "require_docstrings": true,
      "check_naming_conventions": true,
      "check_code_duplication": true,
      "min_test_coverage": 80
    },
    
    "security_checks": {
      "check_sql_injection": true,
      "check_xss_vulnerabilities": true,
      "check_hardcoded_secrets": true,
      "check_insecure_dependencies": true,
      "check_authentication_issues": true,
      "check_authorization_issues": true,
      "check_data_exposure": true,
      "check_input_validation": true
    },
    
    "performance_checks": {
      "check_inefficient_loops": true,
      "check_memory_leaks": true,
      "check_unnecessary_computations": true,
      "check_database_queries": true,
      "check_caching_opportunities": true
    },
    
    "best_practices": {
      "python": {
        "follow_pep8": true,
        "use_type_hints": true,
        "avoid_global_variables": true,
        "use_context_managers": true,
        "prefer_list_comprehensions": true
      },
      "javascript": {
        "use_strict_mode": true,
        "avoid_var_keyword": true,
        "use_const_let": true,
        "use_arrow_functions": true,
        "avoid_callback_hell": true
      },
      "java": {
        "follow_naming_conventions": true,
        "use_interfaces": true,
        "avoid_public_fields": true,
        "use_try_with_resources": true
      },
      "csharp": {
        "use_async_await": true,
        "follow_naming_conventions": true,
        "use_linq": true,
        "dispose_resources": true
      },
      "go": {
        "use_gofmt": true,
        "handle_errors": true,
        "use_defer": true,
        "avoid_goroutine_leaks": true
      }
    },
    
    "documentation_checks": {
      "require_function_docs": true,
      "require_class_docs": true,
      "require_module_docs": false,
      "check_comment_quality": true,
      "require_inline_comments_for_complex_logic": true
    },
    
    "test_generation": {
      "generate_unit_tests": true,
      "generate_integration_tests": false,
      "generate_edge_case_tests": true,
      "test_framework_preference": "auto",
      "include_mocks": true,
      "test_coverage_goal": 80
    },
    
    "failure_scenarios": {
      "generate_boundary_tests": true,
      "generate_null_tests": true,
      "generate_type_error_tests": true,
      "generate_security_attack_tests": true,
      "generate_performance_stress_tests": false
    },
    
    "custom_rules": {
      "enabled": false,
      "rules": [
        {
          "name": "Example Custom Rule",
          "description": "Check for specific pattern",
          "pattern": "regex_pattern_here",
          "severity": "medium",
          "message": "Custom rule violation message"
        }
      ]
    },
    
    "excluded_patterns": {
      "files": ["**/test_*.py", "**/*_test.go", "**/*.spec.js"],
      "directories": ["node_modules", "vendor", "__pycache__", "dist", "build"],
      "functions": ["__init__", "setUp", "tearDown"]
    },
    
    "reporting": {
      "include_code_snippets": true,
      "include_suggestions": true,
      "include_examples": true,
      "group_by_severity": true,
      "show_statistics": true
    }
  }
}
