{
    "code_review_config": {
        "version": "1.0",
        "language": "PySpark",
        "description": "PySpark-specific code review configuration",
        "general_checks": {
            "check_code_quality": true,
            "check_security": true,
            "check_performance": true,
            "check_best_practices": true,
            "check_documentation": true
        },
        "severity_levels": {
            "enabled": [
                "high",
                "medium",
                "low"
            ],
            "fail_on": [
                "high"
            ]
        },
        "code_quality": {
            "max_function_length": 50,
            "max_line_length": 120,
            "max_complexity": 10,
            "require_docstrings": true,
            "check_naming_conventions": true,
            "check_code_duplication": true,
            "min_test_coverage": 70
        },
        "pyspark_specific": {
            "check_dataframe_operations": true,
            "check_rdd_usage": true,
            "warn_on_collect": true,
            "check_broadcast_variables": true,
            "check_partition_optimization": true,
            "check_caching_strategy": true,
            "check_shuffle_operations": true,
            "prefer_dataframe_over_rdd": true,
            "check_udf_usage": true,
            "check_join_optimization": true
        },
        "performance_checks": {
            "check_inefficient_loops": true,
            "check_unnecessary_shuffles": true,
            "check_wide_transformations": true,
            "check_skewed_data": true,
            "check_memory_usage": true,
            "avoid_collect_on_large_datasets": true,
            "check_broadcast_join_opportunities": true,
            "check_partition_count": true,
            "check_persist_cache_usage": true
        },
        "security_checks": {
            "check_hardcoded_credentials": true,
            "check_sql_injection": true,
            "check_data_exposure": true,
            "check_input_validation": true,
            "check_secure_connections": true
        },
        "best_practices": {
            "use_dataframe_api": true,
            "avoid_collect_unless_necessary": true,
            "use_appropriate_file_formats": true,
            "partition_data_properly": true,
            "use_broadcast_for_small_tables": true,
            "cache_reused_dataframes": true,
            "use_column_pruning": true,
            "use_predicate_pushdown": true,
            "avoid_udfs_when_possible": true,
            "use_spark_sql_functions": true
        },
        "documentation_checks": {
            "require_function_docs": true,
            "require_transformation_docs": true,
            "document_dataframe_schema": true,
            "document_job_parameters": true
        },
        "test_generation": {
            "generate_unit_tests": true,
            "generate_integration_tests": true,
            "test_with_sample_data": true,
            "test_edge_cases": true,
            "test_framework_preference": "pytest"
        },
        "failure_scenarios": {
            "test_null_values": true,
            "test_empty_dataframes": true,
            "test_schema_mismatches": true,
            "test_partition_failures": true,
            "test_memory_overflow": true,
            "test_skewed_data": true
        },
        "excluded_patterns": {
            "files": [
                "**/test_*.py",
                "**/*_test.py"
            ],
            "directories": [
                "__pycache__",
                "dist",
                "build",
                ".pytest_cache"
            ],
            "functions": [
                "__init__",
                "setUp",
                "tearDown"
            ]
        }
    }
}